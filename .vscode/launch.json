    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "debugger_args": ["-nh", "-ex", "'set architecture arm'"],
            "name": "Attach to QEMU",
            "executable": "${workspaceFolder}/target/thumbv4t-none-eabi/debug/rost",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}", 
            "gdbpath": "/usr/bin/gdb-multiarch",
        }
    ]
}